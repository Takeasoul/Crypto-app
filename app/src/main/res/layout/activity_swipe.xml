<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="126dp"
            android:layout_height="136dp"
            android:id="@+id/imageView"
            android:src="@drawable/capybara"
            tools:srcCompat="@drawable/capybara"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.052" app:layout_constraintVertical_bias="0.026"/>
    <TextView
            android:id="@+id/tvUsernameLabel"
            android:layout_width="196dp"
            android:layout_height="61dp"
            android:text="Your Nickname"
            android:textSize="18sp"
            android:layout_gravity="end"
            android:padding="16dp" app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="12dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.009"/>
    <TextView
            android:id="@+id/tvUsername"
            android:layout_width="210dp"
            android:layout_height="68dp"
            android:textSize="20sp"
            android:padding="16dp"
            android:layout_gravity="end"
            app:layout_constraintEnd_toEndOf="@+id/tvUsernameLabel"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/tvUsernameLabel" android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@+id/tvUsernameLabel"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" app:layout_constraintVertical_bias="1.0"/>

    <TextView
            android:id="@+id/tvAdressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ur Adress:"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:padding="16dp" tools:layout_editor_absoluteX="7dp"
            app:layout_constraintTop_toBottomOf="@+id/tvUsername" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.244"/>
    <TextView
            android:id="@+id/tvAdress"
            android:layout_width="259dp"
            android:layout_height="145dp"
            android:textSize="20sp"
            android:padding="16dp"
            android:paddingTop="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvAdressLabel"
            app:layout_constraintHorizontal_bias="0.619"
            app:layout_constraintVertical_bias="0.19" app:layout_constraintTop_toTopOf="@+id/tvAdressLabel"
            app:layout_constraintBottom_toBottomOf="@+id/tvAdressLabel"/>
    <TextView
            android:id="@+id/tvBalanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance:"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAdressLabel"
            app:layout_constraintStart_toStartOf="@+id/tvAdressLabel" android:layout_marginTop="92dp"
            android:layout_marginStart="4dp"/>
    <TextView
            android:id="@+id/tvBalance"
            android:layout_width="189dp"
            android:layout_height="86dp"
            android:textSize="20sp"
            android:padding="16dp"
            android:paddingTop="8dp" app:layout_constraintEnd_toEndOf="@+id/tvAdress"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toTopOf="@+id/tvBalanceLabel"
            app:layout_constraintBottom_toBottomOf="@+id/tvBalanceLabel"
            app:layout_constraintStart_toStartOf="@+id/tvAdress"/>
    <Button
            android:text="Next"
            android:layout_width="123dp"
            android:layout_height="78dp" android:id="@+id/btnNext"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.786"
            android:layout_marginBottom="56dp" app:layout_constraintTop_toBottomOf="@+id/tvBalance"
            app:layout_constraintVertical_bias="0.816"/>
    <Button
            android:text="Copy Address to ClipBoard"
            android:layout_width="135dp"
            android:layout_height="79dp" android:id="@+id/copyAddress"
            app:layout_constraintEnd_toStartOf="@+id/btnNext" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnNext"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintVertical_bias="0.503" app:layout_constraintTop_toTopOf="@+id/btnNext"/>
</androidx.constraintlayout.widget.ConstraintLayout>